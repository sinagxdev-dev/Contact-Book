def add_contact(contacts):
    name = input("Enter name: ").strip().lower()
    phone = input("Enter phone number: ").strip()
    email = input("Enter email: ").strip().lower()

    if not name:
        print("Name cannot be empty.")
        return

    if not phone.isdigit():
        print("Phone number must contain digits only.")
        return

    if "@" not in email or "." not in email:
        print("Invalid email format.")
        return

    if name in contacts:
        print("This contact already exists.")
        return

    contacts[name] = {
        "Phone": phone,
        "Email": email
    }

    print(f"\nContact '{name}' added successfully!")


def view_contacts(contacts):
    print("\n=== VIEW CONTACTS ===")

    if not contacts:
        print("No contacts found.")
        return

    count = 0
    for name, info in contacts.items():
        count += 1
        print(f"\n{count}. Name: {name.title()}")
        print(f"   Phone: {info['Phone']}")
        print(f"   Email: {info['Email']}")
        print("---------------------------")

    print(f"\nTotal Contacts: {count}")


def search_contact(contacts):
    print("\n=== SEARCH CONTACT ===")

    if not contacts:
        print("No contacts to search.")
        return

    search_name = input("Enter name to search: ").strip().lower()
    found = False

    for name, info in contacts.items():
        if search_name == name:
            print("\nContact found!")
            print(f"Name: {name.title()}")
            print(f"Phone: {info['Phone']}")
            print(f"Email: {info['Email']}")
            found = True
            break

    if not found:
        print("Contact not found.")


def update_contact(contacts):
    print("\n=== UPDATE CONTACT ===")

    if not contacts:
        print("No contacts to update.")
        return

    name = input("Enter name to update: ").strip().lower()

    if name not in contacts:
        print("Contact not found.")
        return

    phone = input("Enter new phone number (leave blank to keep current): ").strip()
    email = input("Enter new email (leave blank to keep current): ").strip()

    if phone:
        if not phone.isdigit():
            print("Invalid phone number.")
            return
        contacts[name]["Phone"] = phone

    if email:
        if "@" not in email or "." not in email:
            print("Invalid email format.")
            return
        contacts[name]["Email"] = email

    print(f"Contact '{name}' updated successfully!")


def delete_contact(contacts):
    print("\n=== DELETE CONTACT ===")

    if not contacts:
        print("No contacts to delete.")
        return

    name = input("Enter name to delete: ").strip().lower()

    if name in contacts:
        del contacts[name]
        print(f"Contact '{name}' deleted successfully.")
    else:
        print("Contact not found.")


def main():
    contacts = {}

    while True:
        print("\n-- WELCOME TO CONTACT BOOK --")
        print("1. Add Contact")
        print("2. View Contacts")
        print("3. Search Contact")
        print("4. Update Contact")
        print("5. Delete Contact")
        print("6. Exit")

        choice = input("Enter your choice (1-6): ").strip()

        if choice == "1":
            add_contact(contacts)
        elif choice == "2":
            view_contacts(contacts)
        elif choice == "3":
            search_contact(contacts)
        elif choice == "4":
            update_contact(contacts)
        elif choice == "5":
            delete_contact(contacts)
        elif choice == "6":
            print("Thank you for using Contact Book. Goodbye!")
            break
        else:
            print("Invalid choice. Please enter a number from 1 to 6.")


if __name__ == "__main__":
    main()
