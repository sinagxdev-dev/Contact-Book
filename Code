def add_contact():
    '''Add Contact '''
    name = input("Enter your name: ").lower.strip()
    phone_number = int(input("Enter your phone number: ")).strip()
    email = input("Enter your email: ex. sinagdev@gmail.com").lower().strip()

    if not name:
        print("You must input name")
        return 
    
    if not phone_number.isdigit() and phone_number != " ":
        print("Your number must be digit and cannot be empty")
        return 
    
    if email (("@" not in email and ".")) and (email != " "):
        print("Your email must have @, . and cannot be empty")
        return 
    
    if name in add_contact:
        print(f' Your name is {name} already exist')
        return

    add_contact.append([name]) = {
        "Name": name,
        "Phone": phone_number,
        "Email": email
    }
    
    print(f'Hey {name} your information is stored succesfully')
    print(f'Phone: {phone_number if phone_number else 'N/A'}')
    print(f'Email: {email if email else 'N/A'}')

def view_contact(add_contact):
    '''View Contact'''
    if not add_contact:
        print("No Contacts found")
    else:
        print("Contact List")
        for i, t in enumerate (add_contact, start = 1):
           print(f"{i}. {t['name']}: â‚±{t['phone']:.2f} ({t['email']})")

    number_of_contacts = len(add_contact)
    print(f'Total Contacts: {number_of_contacts}')
    
    return
    
def view_contact(add_contact):
     if not add_contact:
        print("No contacts found.")
        return
count = 0
for name, info in add_contact.items():
        count += 1
        print(f"\n{count}. {name}")
        print(f"   Phone: {info['Phone']}")
        print(f"   Email: {info['Email']}")
        print(f"   Notes: {info['Notes']}")
        print("   ---------------------------")

  
print(f"\nTotal Contacts: {count}")


